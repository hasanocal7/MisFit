<%- include('partials/_header') %>
<%- include('partials/_navigation') %>
<div id="contact" class="contact">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form id="request" class="main_form" method="POST" action="/users/signup">
                    <div class="row">
                        <div class="col-md-10 ">
                          <input class="contactus" placeholder="First Name" type="text" name="name" required> 
                        </div>
                        <div class="col-md-10 ">
                            <input class="contactus" placeholder="Last Name" type="text" name="surname" required> 
                        </div>
                       <div class="col-md-10 ">
                          <input class="contactus" placeholder="Email" type="email" name="email" required> 
                       </div>
                       <div class="col-md-10">
                          <input class="contactus" placeholder="Password" type="password" name="password" required> 
                       </div>
                       <div class="col-md-6">
                        <select class="contactus" id="title" name="title">
                            <option value="trainer">Trainer</option>
                            <option value="member">Member</option>
                          </select>
                        </div>
                       <div class="col-md-10">
                          <button class="send_btn">SIGN UP</button>
                       </div>
                    </div>
                 </form>
            </div>
        </div>
    </div>
</div>
<%- include('partials/_footer') %>